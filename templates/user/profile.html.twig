{% extends 'base.html.twig' %}

{% block title %}Profile list{% endblock %}

{% block body %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>
    {% include 'layout/navbar.html.twig'%}

    <div class="example-wrapper">
        {% for message in app.flashes('notice') %}
            <div class="alert alert-notice">
                {{ message }}
            </div>
        {% endfor %}
        <h1>{{ 'Votre Profile :'|trans }}</h1>
        <ul>
            <li> Nom: {{ user.lastName|upper }}</li>
            <li> Pr√©nom: {{ user.firstName }}</li>
            <li> Email: {{ user.email }}</li>
            <li> Date de naissance: {{ user.birthDate|date('d F Y') }}</li>
        </ul>
        <h2 style="color: blue"> Modifier votre profile : </h2>
        {{ form(form) }}
    </div>
{% endblock %}
