{% block body %}
 {% block css %} 
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" src="" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
        {% endblock %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 5000px; width: 100%; font: 18px/1.5 sans-serif;}
        .example-wrapper code { background: #F5F5F5; padding: 6px 10px; }
        .example-wrapper table td {padding: 5px; margin: 5px; text-decoration: none;}
        .example-wrapper table td a {text-decoration: none;}
        nav {
            width:100%;
        }
    </style>

    <div class="example-wrapper">
    <nav class="navbar navbar-light" style="background-color: #e3f2fd;">
        <div class="example-wrapper" >
            <table>
                <tr>
                    <td>
                        {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                            <a href="{{ path('app_logout') }}">Déconnexion</a>
                        {% else %}
                            <a href="{{ path('app_login') }}">Se connecter</a>
                        {% endif %}
                    </td>
                    <td>
                        {% if is_granted('ROLE_ADMIN') %}
                            <a href="{{ path('user_list') }}"><i class="fas fa-users"></i>Liste des utilisateurs</a>
                        {% endif %}
                    </td>
                    <td>
                        {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                            {% if is_granted('ROLE_USER') %}
                                <a href="{{ path('profile') }}">Votre profil</a>
                            {% endif %}
                        {% else %}
                            <a href="{{ path('user-create') }}">Créer un compte</a>
                        {% endif %}
                    </td>
                </tr>
            </table>
        </div>
</nav
    </div>
{% endblock %}
